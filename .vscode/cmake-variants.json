{
  "buildType": {
    "default": "debug",
      "choices": { 
        "debug": {
          "short": "Debug",
          "long": "Emit debug information without performing optimizations",
          "buildType": "Debug"
        },
        "relwithdebinfo": {
          "short": "RelWithDebInfo",
          "long": "performing optimizations and keep debug information",
          "buildType": "RelWithDebInfo"
        },
        "release": {
          "short": "Release",
          "long": "Optimize for smallest binary size",
          "buildType": "Release"
        }
      }
  },
  "TARGET": 
  {
    "default": "FLASHCART",
    "choices": {
      "FLASHCART": {
        "short": "Flashcart",
        "settings": {
          "HARDWARE_TYPE" : "FLASHCART",
          "BUILD_VERSION" : "0.0.1"
        }
      },
      "EMULATOR": {
        "short": "Emulator",
        "settings": {
          "HARDWARE_TYPE" : "EMULATOR",
          "BUILD_VERSION" : "0.0.1"
        }
      }
    }
  },
  "SDK": 
  {
    "default": "LIBDRAGON",
    "choices": {
      "LIBDRAGON": {
        "short": "LibDragon",
        "settings": {
          "SDK_TYPE" : "LIBDRAGON",
          "CMAKE_TOOLCHAIN_FILE" : "${workspaceFolder}/CMake/toolchain.libdragon.cmake",
          "TOOLCHAIN_PREFIX" : "${workspaceFolder}/toolchain/gcc-toolchain-mips64",
          "LIBDRAGON_PREFIX": "${workspaceFolder}/toolchain/libdragon"
        }
      },
      "N64SDK": {
        "short": "n64sdkmod",
        "settings": {
          "SDK_TYPE": "N64SDK",
          "CMAKE_TOOLCHAIN_FILE": "${workspaceFolder}/CMake/toolchain.n64sdkmod.cmake",
          "TOOLCHAIN_PREFIX": "/usr/mips64-elf",
          "N64SDKMOD_PREFIX": "${workspaceFolder}/external/n64sdkmod",
          "CMAKE_C_OUTPUT_EXTENSION_REPLACE": 1,
          "CMAKE_ASM_OUTPUT_EXTENSION_REPLACE": 1
        }
      }
    }
  }
}